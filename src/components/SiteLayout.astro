---
const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{ title }</title>
	</head>
	<body class="relative font-syne bg-neutral-900 text-yellow-500 grid grid-cols-1 md:grid-cols-5 w-full h-full min-w-screen min-h-screen">
    <aside class="flex items-center border-yellow-500 justify-between md:border-r-2 w-full md:w-fit md:justify-start md:items-start h-fit md:h-full md:flex-col gap-4 font-medium p-4">
      <div class="flex flex-col gap-2 text-xl">
        <h1>zeu.dev</h1>
        <h2 class="hidden md:flex">all things me!</h2>
      </div>

      <button id="menu_button" class="px-2 py-1 border border-yellow-500 self-end w-fit h-fit md:hidden">
        Menu
      </button>

      <nav id="navigation" class="hidden md:flex flex-col gap-4 w-full md:col-span-1">
        <hr class="border-yellow-500 " />

        <section class="flex flex-col gap-2 text-white">
          <h3 class="text-yellow-500">socials</h3>
          <a href="https://twitter.com/zeu_dev">twitter</a>
          <a href="https://github.com/zeucapua">github</a>
          <a href="https://twitch.tv/zeu_dev">twitch</a>
        </section>

        <hr class="border-yellow-500 " />

        <section class="flex flex-col gap-2 text-white">
          <h3 class="text-yellow-500">blog</h3>
          <p>skogz: diy svelte 5 ssr router</p>
          <a href="/blog">more {"->"}</a>
        </section>

        <hr class="border-yellow-500 " />

        <section class="flex flex-col gap-2 text-white">
          <h3 class="text-yellow-500">related</h3>
          <a href="https://easytodo.link">easytodo.link</a>
          <a href="https://app.opensauced.pizza">OpenSauced</a>
        </section>
      </nav>
    </aside>

    <div class="md:col-span-4 w-full h-full">
      <slot />
    </div>
	</body>
</html>

<script>
  const menuButton = document.querySelector("#menu_button");
  const navSection = document.querySelector("#navigation");
</script>

<style is:global>
  @font-face {
    font-family: "SyneMono";
    src: url("/SyneMono-Regular.ttf");
  }

  a {
    text-decoration-line: underline;
  }
</style>
